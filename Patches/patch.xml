<?xml version="1.0" encoding="utf-8" ?>
<Patch>              
<!-- CORE PATCHES -->




<!-- Beer brewing is Brewing basics -->
                <Operation Class="PatchOperationReplace">
                    <success>Always</success>
                    <xpath>Defs/ResearchProjectDef[defName="Brewing"]/label</xpath>
                    <value>
                        <label>Brewing basics</label>
                    </value>
                </Operation>


<!-- Butcher table research -->
                <Operation Class="PatchOperationConditional">
                  <xpath>/Defs/ThingDef[defName="TableButcher"]/researchPrerequisites</xpath>
                  <match Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="TableButcher"]/researchPrerequisites</xpath>
                    <value>
                      <researchPrerequisites>
                        <li>Ferny_ButcherTable</li>
                      </researchPrerequisites> 
                   </value>
                  </match>
                  <nomatch Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="TableButcher"]</xpath>
                    <value>
                      <researchPrerequisites>
                        <li>Ferny_ButcherTable</li>
                      </researchPrerequisites> 
                    </value>
                  </nomatch>
                </Operation>



</Patch>